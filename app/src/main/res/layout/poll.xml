<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="369dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/labelView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACTIVE" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/questionView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:text="Question"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/option1View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="11dp"
                    android:text="A"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/questionView" />

                <TextView
                    android:id="@+id/option2View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="B"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/option1View" />

                <TextView
                    android:id="@+id/option3View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="C"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/option2View" />

                <TextView
                    android:id="@+id/option4View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="D"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/option3View" />

                <TextView
                    android:id="@+id/option5View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:text="E"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/option4View" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="149dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="?android:attr/listDivider"
                    app:layout_constraintStart_toEndOf="@+id/option1View"
                    app:layout_constraintTop_toBottomOf="@+id/questionView" />

                <view
                    android:id="@+id/bar1View"
                    class="android.support.design.widget.AppBarLayout"
                    id="@+id/view"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintBottom_toBottomOf="@+id/option1View"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/option1View" />

                <view
                    android:id="@+id/bar2View"
                    class="android.support.design.widget.AppBarLayout"
                    id="@+id/view2"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="?android:attr/colorPressedHighlight"
                    app:layout_constraintBottom_toBottomOf="@+id/option2View"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/option2View" />

                <view
                    android:id="@+id/bar3View"
                    class="android.support.design.widget.AppBarLayout"
                    id="@+id/view3"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@color/colorAccent"
                    app:layout_constraintBottom_toBottomOf="@+id/option3View"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/option3View" />

                <view
                    android:id="@+id/bar4View"
                    class="android.support.design.widget.AppBarLayout"
                    id="@+id/view4"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="?android:attr/colorPressedHighlight"
                    app:layout_constraintBottom_toBottomOf="@+id/option4View"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/option4View" />

                <view
                    android:id="@+id/bar5View"
                    class="android.support.design.widget.AppBarLayout"
                    id="@+id/view5"
                    android:layout_width="4dp"
                    android:layout_height="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:background="@android:color/background_dark"
                    app:layout_constraintBottom_toBottomOf="@+id/option5View"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintTop_toTopOf="@+id/option5View" />

                <TextView
                    android:id="@+id/awnser1View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="@+id/bar1View"
                    app:layout_constraintStart_toEndOf="@+id/bar1View"
                    app:layout_constraintTop_toTopOf="@+id/bar1View" />

                <TextView
                    android:id="@+id/awnser2View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="@+id/bar2View"
                    app:layout_constraintStart_toEndOf="@+id/bar2View"
                    app:layout_constraintTop_toTopOf="@+id/bar2View" />

                <TextView
                    android:id="@+id/awnser3View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="@+id/bar3View"
                    app:layout_constraintStart_toEndOf="@+id/bar3View"
                    app:layout_constraintTop_toTopOf="@+id/bar3View" />

                <TextView
                    android:id="@+id/awnser4View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="1dp"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="@+id/bar4View"
                    app:layout_constraintStart_toEndOf="@+id/bar4View"
                    app:layout_constraintTop_toTopOf="@+id/bar4View" />

                <TextView
                    android:id="@+id/awnser5View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="1"
                    app:layout_constraintBottom_toBottomOf="@+id/bar5View"
                    app:layout_constraintStart_toEndOf="@+id/bar5View"
                    app:layout_constraintTop_toTopOf="@+id/bar5View" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>